<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back"
                    android:layout_marginStart="@dimen/dp_12"
                    android:padding="@dimen/dp_10"
                    />


                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Sign Up"-->
                <!--app:font="@{`robo_medium`}"-->
                <!--android:gravity="center"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="@dimen/sp_18"-->
                <!--android:id="@+id/textView"-->
                <!--/>-->

            </RelativeLayout>



            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginTop="@dimen/sp_50"-->
            <!--android:text="LOGO"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="@dimen/sp_50" />-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="?android:attr/actionBarSize"
                android:contentDescription="@string/app_name"
                android:src="@drawable/dulhaniyaa" />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_height="@dimen/sp_45"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/round_edittext"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="@dimen/sp_10"
                android:hint="E-mail Address / Mobile Number"
                android:paddingLeft="@dimen/sp_15"
                android:textColor="@android:color/white"
                android:textColorHint="@color/white"
                />

            <EditText
                android:id="@+id/pass"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sp_45"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/round_edittext"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="@dimen/sp_10"
                android:hint="@string/pass"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/sp_15"
                android:textColor="@android:color/white"
                android:textColorHint="@color/white"
                />


            <TextView
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"
                android:id="@+id/tv_forgot_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/sp_15"
                android:text="@string/forget_password"
                android:textColor="@color/white"
                />


            <Button
                android:id="@+id/login_button"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_width="@dimen/dp_190"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/button_shape"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_4">

                <View
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray"></View>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="Or Login with"
                    android:textColor="@color/white_color_text"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray"></View>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fb" />


                <ImageView
                    android:id="@+id/iv_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:background="@drawable/gplus" />

            </LinearLayout>

            <TextView
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"
                android:id="@+id/tv_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="@string/dont_have_account"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/terms_and_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="@string/by_continue"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/terms_and_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/term"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="and"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/dp_2"
                    />
                <TextView
                    android:id="@+id/privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="@dimen/dp_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="."/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>

